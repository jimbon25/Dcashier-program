# Production Environment Variables
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_PATH=./sembako-pos.db

# JWT Configuration
JWT_SECRET=dcashier-super-secret-production-key-2024-secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=https://dcashier.netlify.app
PRODUCTION_FRONTEND_URLS=https://dcashier.netlify.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Production Security
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
TRUST_PROXY=true

# Platform specific (uncomment for your platform)
# Render.com
# PORT=$PORT

# Railway
# PORT=$PORT
# DATABASE_URL=$DATABASE_URL

# Heroku
# PORT=$PORT
# DATABASE_URL=$DATABASE_URL
