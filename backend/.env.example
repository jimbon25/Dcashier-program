# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_PATH=./sembako-pos.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Production Security (set to true in production)
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
TRUST_PROXY=false

# Railway/Production specific
# DATABASE_URL=postgresql://username:password@host:port/database (if using PostgreSQL)
# REDIS_URL=redis://username:password@host:port (if using Redis for sessions)
