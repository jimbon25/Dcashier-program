{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/api" }
  ],
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "backend/api/index.ts",
      "use": "@vercel/node"
    }
  ]
}